-- Create Division table
CREATE TABLE Division (
    divisionId INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) UNIQUE NOT NULL,
    nameLocal VARCHAR(255) UNIQUE NOT NULL,
    active BOOLEAN NOT NULL
);

